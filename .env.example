# Variables de entorno opcionales
# Copia este archivo a .env y ajusta los valores según tu configuración

# Base de datos PostgreSQL
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=facturacion
DB_USER=postgres
DB_PASSWORD=tu_password

# API
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=True

# Email (Gmail)
# Para obtener una contraseña de aplicación de Gmail:
# 1. Ve a tu cuenta de Google: https://myaccount.google.com/
# 2. Ve a Seguridad > Verificación en 2 pasos (actívala si no está activa)
# 3. Ve a Seguridad > Contraseñas de aplicaciones
# 4. Genera una nueva contraseña de aplicación para "Correo"
# 5. Copia la contraseña de 16 caracteres aquí
SMTP_USER=tucorreo@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion_de_16_caracteres
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Destinatarios de notificaciones automáticas (separados por comas)
EMAIL_DESTINATARIOS=correo1@ejemplo.com,correo2@ejemplo.com

# Notificaciones
NOTIFICACION_DIAS_ANTICIPACION=30

# Seguridad
SECRET_KEY=dev-secret-key-change-in-production

# Usuario Root Inicial (se crea automáticamente al iniciar)
ROOT_USER=admin
ROOT_PASSWORD=admin123
ROOT_EMAIL=admin@sadi.com
ROOT_NAME=Administrador
